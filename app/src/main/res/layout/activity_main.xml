<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idmainactivy"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choice"
        android:textSize="20dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:textStyle="bold|italic"
        android:textColor="@color/redblack"
        android:gravity="center_horizontal"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >
            <ImageView
                android:id="@+id/Joueur_1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pok_1"
                />
            <ImageView
                android:id="@+id/Joueur_2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pok_2"
                />
            <ImageView
                android:id="@+id/Joueur_3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pok_3"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >
            <ImageView
                android:id="@+id/Joueur_4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pok_4"
                />

            <ImageView
                android:id="@+id/Joueur_5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pok_5"
                />

            <ImageView
                android:id="@+id/Joueur_6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pok_6"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/idPlay"
        android:text="@string/jouer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/redblack"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        />
</LinearLayout>